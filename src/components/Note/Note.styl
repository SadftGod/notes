sizes(w,h)  
   width w
   height h 
flexer(jc,ai)
   display: flex
   flex-flow: row wrap
   justify-content jc
   align-items ai
title-fonter()
   font-family: 'Yeseva One', cursive;
fonter-glitc()
   font-family: 'Rubik Glitch', cursive;
default-font()
   font-family: 'Comfortaa', cursive;

.Note
   margin-bottom 10px
   padding 15px
   sizes(250px,200px)
   border-radius: 22px 0px 22px 0px;
   overflow-y: scroll
   overflow-x hidden;
.Note:hover
   cursor pointer
   box-shadow: 2px 2px 11px 5px #000129;
   border 1px solid black
.title-note
   font-size 25px
   title-fonter()
.text-note
   font-size 15px
   default-font()
.delete-btn 
   sizes(30px,30px)
   position: absolute;
   margin-left: 200px
   background: url('delete.png') no-repeat
   background-size: 100%
   border none
   cursor pointer
   display none
.Note:hover .delete-btn
   display block